function si() {
  if [ -n "$1" ]; then
    grep "$1" . -ri "${@:2}";
  else
    echo "usage: si <search-term> [<args>]"
  fi
}

function sii() {
  if [ -n "$1" ]; then
    grep "$1" . -ri --include="$2" "${@:3}";
  else
    echo "usage: sii <search-term> <filter-pattern> [<args>]"
    echo "  e.g. sii main *.c"
  fi
}
